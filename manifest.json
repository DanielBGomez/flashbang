{
    "manifest_version":1,
    "type":"WebApp",
    "meta":{
        "name":"Flashbang",
        "version":"0.1.0",
        "minimum-overwolf-version":"0.77.10",
        "author":"Daniel B Gomez",
        "icon":"assets/icon/app/icon.png",
        "icon_gray":"assets/icon/app/icon.png",
        "launcher_icon": "assets/icon/app/favicon.ico",
        "description":"Flashbang widget"
    },
    "data": {
        "start_window":"Dashboard",
        "windows":{
            "Dashboard":{
                    "file":"lib/dashboard.html",
                    "transparent": true,
                    "resizable": true,
                    "use_os_windowing": false,
                    "show_maximize": true,
                    "disable_blur": true,
                    "clickthrough": false,
                    "size": {
                        "width":800,
                        "height":600
                        },
                    "min_size": {
                        "width":600,
                        "height":400
                    }
                },
            "Flash":{
                    "file":"lib/index.html",
                    "transparent": true,
                    "resizable": false,
                    "use_os_windowing": false,
                    "show_maximize": true,
                    "disable_blur": true,
                    "clickthrough": true
                }
        }
    }
}