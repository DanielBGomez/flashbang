{
    "manifest_version":1,
    "type":"WebApp",
    "meta":{
        "name":"Flashbang",
        "version":"0.1.0",
        "minimum-overwolf-version":"0.77.10",
        "author":"Daniel B Gomez",
        "icon":"assets/icon/app/icon.png",
        "icon_gray":"assets/icon/app/icon.png",
        "launcher_icon": "assets/icon/app/favicon.ico",
        "description":"Flashbang widget"
    },
    "data": {
        "start_window":"Main",
        "windows": {
            "Main": {
                "file":"lib/main.html",
                "is_background_page": true
            },
            "Dashboard": {
                "file":"lib/dashboard.html",
                "desktop_only": true,
                "native_window": true,
                "transparent": true,
                "resizable": true,
                "use_os_windowing": false,
                "show_maximize": true,
                "disable_blur": true,
                "clickthrough": false,
                "size": {
                    "width":800,
                    "height":600
                    },
                "min_size": {
                    "width":600,
                    "height":400
                }
            }
        }
    }
}